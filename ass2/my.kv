<MyGrid>:
	start:start
	time:time
	amount:amount
	GridLayout:
		cols:1
		size: root.width, root.height
			
		Label:
			text: "Welcome To Our Bike Route App"
			size_hint: (None, None)
			width: 700
			height: 70
				
			
		GridLayout:
			cols:4
			Label:
				text: ""
				size: 100,self.height
			
			Image:
				size_hint: (None, None)
				source: 'bikes.jpg'
				width: 200
				height: 200
				allow_stretch: True
				
			
			Label:
				text: "descriptionad asdsadsadsad as dasdas sa dsa dsa descriptionad"
				text_size: self.size
			
			Label:
				text:""
				size: 100,self.height
			
			#second row
			Label:
				text:""
				size: 100,self.height
			
			Label:
				text:"what is your current location?"
				text_size: self.size
			
			TextInput:
				size_hint: (.2, None)
				multiline:False
				size: self.width,30
				id:start
				
			Label:
				text:""
				size: 100,self.height
			#third row
			Label:
				text:""
				size: 100,self.height
			
			Label:
				text:"how much time would you like to spend?"
				text_size: self.size
			TextInput:
				size_hint: (.2, None)
				multiline:False
				size: self.width,30
				id:time
				
			Label:
				text:""
				size: 100,self.height
			
			#fourth row
			Label:
				text:""
				size: 100,self.height
			
			Label:
				text:"how much location recommendations would you like to recieve?"
				text_size: self.size
			
			TextInput:
				size_hint: (.2, None)
				multiline:False
				size: self.width,30
				id: amount
			Label:
				text:""
				size: 100,self.height
			
			#fifth row
			Label:
				text:""
				size: 100,self.height
			
			Button:
				text:"try example value"
				
			
			Button:
				text:"Recommend Me"
				on_press: root.recommaendMeFunc()
				
			Label:
				text:""
				size: 100,self.height
			